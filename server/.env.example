# CDK Environment Variables
# Copy this file to .env and set your actual values

# Required: System Admin Email
CDK_PARAM_SYSTEM_ADMIN_EMAIL=admin@example.com

# Required: API Key Parameters (Generate unique UUIDs for each tier)
CDK_PARAM_API_KEY_PREMIUM_TIER_PARAMETER=your-premium-api-key-here
CDK_PARAM_API_KEY_ADVANCED_TIER_PARAMETER=your-advanced-api-key-here
CDK_PARAM_API_KEY_BASIC_TIER_PARAMETER=your-basic-api-key-here

# Optional: Tenant Configuration
CDK_PARAM_TENANT_ID=basic
CDK_PARAM_TENANT_NAME=basic
CDK_PARAM_STAGE=prod
CDK_PARAM_USE_FEDERATION=true

# Optional: System Admin Role
CDK_PARAM_SYSTEM_ADMIN_ROLE_NAME=SystemAdmin

# Optional: Advanced Cluster Configuration
CDK_ADV_CLUSTER=INACTIVE

# Optional: Commit ID for deployment tracking
CDK_PARAM_COMMIT_ID=

# Optional: Tier configuration
CDK_PARAM_TIER=basic

# Optional: Enable CDK Nag for security and best practices checks
# Set to 'true' to enable AWS Solutions Checks during deployment
CDK_NAG_ENABLED=false