# Build stage - simplified for speed
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY . .

# Simple, fast Go build
RUN CGO_ENABLED=0 GOOS=linux go build -mod=vendor -ldflags='-w -s' -o user ./cmd/user

# Runtime stage
FROM alpine:latest

# Install ca-certificates for HTTPS requests and update packages
RUN apk update && apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/user .

EXPOSE 3010
CMD ["./user"]