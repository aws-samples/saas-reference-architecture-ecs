# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY . .

# Use vendor mode (no network required)
RUN CGO_ENABLED=0 GOOS=linux go build -mod=vendor -ldflags='-w -s' -o product ./cmd/product

# Runtime stage
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/product .

EXPOSE 3010
CMD ["./product"]